<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:top="5dp"
        android:bottom="5dp">
        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/colorTransparent"/>
            <stroke
                android:color="@color/colorGrey"
                android:width="1dp" />
            <corners
                android:radius="2dp"/>

            <padding
                android:left="15dp"
                android:right="15dp"/>

        </shape>
    </item>

</layer-list>