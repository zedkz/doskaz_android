<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite">

    <include
        android:id="@+id/toolbar"
        layout="@layout/include_toolbar_main"/>

    <EditText
        android:id="@+id/edtImpressionCOV"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/skin_white_corner_border"
        android:padding="15dp"
        android:hint="@string/om_impression"
        android:gravity="top"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/txtCountCOV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edtImpressionCOV"
        app:layout_constraintStart_toStartOf="@id/edtImpressionCOV"
        app:layout_constraintEnd_toEndOf="@id/edtImpressionCOV"
        android:layout_marginTop="15dp"
        android:textSize="12sp"
        android:textColor="@color/colorGrey"/>

</androidx.constraintlayout.widget.ConstraintLayout>