<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_78"/>

            <ImageView
                android:id="@+id/imgIconObjectMain"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:layout_constraintTop_toTopOf="@id/txtTitleObjectMain"
                app:layout_constraintBottom_toBottomOf="@id/txtAddressObjectMain"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="15dp"/>

            <TextView
                android:id="@+id/txtTitleObjectMain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="70dp"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtAddressObjectMain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txtTitleObjectMain"
                app:layout_constraintStart_toStartOf="@id/txtTitleObjectMain"
                app:layout_constraintEnd_toEndOf="@id/txtTitleObjectMain"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/txtCategoryObjectMain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txtAddressObjectMain"
                app:layout_constraintStart_toStartOf="@id/txtTitleObjectMain"
                app:layout_constraintEnd_toEndOf="@id/txtTitleObjectMain"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorGrey"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="@id/txtCategoryObjectMain"
                app:layout_constraintBottom_toBottomOf="@id/txtCategoryObjectMain"
                app:layout_constraintEnd_toEndOf="@id/txtTitleObjectMain"
                android:padding="5dp"
                android:src="@drawable/ic_79"
                android:visibility="gone"/>

            <View
                android:id="@+id/viewBackgroundObjectMain"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/txtCategoryObjectMain"
                app:layout_constraintBottom_toBottomOf="@id/divider"
                android:layout_marginTop="60dp"
                android:background="@color/colorNotAccessible" />

            <ImageView
                android:id="@+id/imgOverallScopeObjectMain"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="@id/viewBackgroundObjectMain"
                app:layout_constraintStart_toStartOf="@id/imgIconObjectMain"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_45"/>

            <TextView
                android:id="@+id/txtOverallScopeObjectMain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/imgOverallScopeObjectMain"
                app:layout_constraintBottom_toBottomOf="@id/imgOverallScopeObjectMain"
                app:layout_constraintStart_toEndOf="@id/imgOverallScopeObjectMain"
                android:layout_marginStart="15dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@string/not_accessible"/>

            <ImageView
                android:id="@+id/imgParkingObjectMain"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@id/txtOverallScopeObjectMain"
                app:layout_constraintStart_toStartOf="@id/imgOverallScopeObjectMain"
                app:layout_constraintEnd_toEndOf="@id/imgOverallScopeObjectMain"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_45"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/imgParkingObjectMain"
                app:layout_constraintBottom_toBottomOf="@id/imgParkingObjectMain"
                app:layout_constraintStart_toEndOf="@id/imgParkingObjectMain"
                android:layout_marginStart="15dp"
                android:text="@string/om_parking"/>

            <ImageView
                android:id="@+id/imgEntranceObjectMain"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@id/imgParkingObjectMain"
                app:layout_constraintStart_toStartOf="@id/imgOverallScopeObjectMain"
                app:layout_constraintEnd_toEndOf="@id/imgOverallScopeObjectMain"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_45"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/imgEntranceObjectMain"
                app:layout_constraintBottom_toBottomOf="@id/imgEntranceObjectMain"
                app:layout_constraintStart_toEndOf="@id/imgEntranceObjectMain"
                android:layout_marginStart="15dp"
                android:text="@string/om_entrance"/>

            <ImageView
                android:id="@+id/imgMovementObjectMain"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@id/imgEntranceObjectMain"
                app:layout_constraintStart_toStartOf="@id/imgOverallScopeObjectMain"
                app:layout_constraintEnd_toEndOf="@id/imgOverallScopeObjectMain"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_45"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/imgMovementObjectMain"
                app:layout_constraintBottom_toBottomOf="@id/imgMovementObjectMain"
                app:layout_constraintStart_toEndOf="@id/imgMovementObjectMain"
                android:layout_marginStart="15dp"
                android:text="@string/om_movement"/>

            <ImageView
                android:id="@+id/imgServiceObjectMain"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@id/imgMovementObjectMain"
                app:layout_constraintStart_toStartOf="@id/imgOverallScopeObjectMain"
                app:layout_constraintEnd_toEndOf="@id/imgOverallScopeObjectMain"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_45"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/imgServiceObjectMain"
                app:layout_constraintBottom_toBottomOf="@id/imgServiceObjectMain"
                app:layout_constraintStart_toEndOf="@id/imgServiceObjectMain"
                android:layout_marginStart="15dp"
                android:text="@string/om_service"/>

            <ImageView
                android:id="@+id/imgToiletObjectMain"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@id/imgServiceObjectMain"
                app:layout_constraintStart_toStartOf="@id/imgOverallScopeObjectMain"
                app:layout_constraintEnd_toEndOf="@id/imgOverallScopeObjectMain"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_45"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/imgToiletObjectMain"
                app:layout_constraintBottom_toBottomOf="@id/imgToiletObjectMain"
                app:layout_constraintStart_toEndOf="@id/imgToiletObjectMain"
                android:layout_marginStart="15dp"
                android:text="@string/om_toilet"/>

            <ImageView
                android:id="@+id/imgNavigationObjectMain"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@id/imgToiletObjectMain"
                app:layout_constraintStart_toStartOf="@id/imgOverallScopeObjectMain"
                app:layout_constraintEnd_toEndOf="@id/imgOverallScopeObjectMain"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_45"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/imgNavigationObjectMain"
                app:layout_constraintBottom_toBottomOf="@id/imgNavigationObjectMain"
                app:layout_constraintStart_toEndOf="@id/imgNavigationObjectMain"
                android:layout_marginStart="15dp"
                android:text="@string/om_navigation"/>


            <ImageView
                android:id="@+id/imgServiceAvailabilityObjectMain"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@id/imgNavigationObjectMain"
                app:layout_constraintStart_toStartOf="@id/imgOverallScopeObjectMain"
                app:layout_constraintEnd_toEndOf="@id/imgOverallScopeObjectMain"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_45"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/imgServiceAvailabilityObjectMain"
                app:layout_constraintBottom_toBottomOf="@id/imgServiceAvailabilityObjectMain"
                app:layout_constraintStart_toEndOf="@id/imgServiceAvailabilityObjectMain"
                android:layout_marginStart="15dp"
                android:text="@string/om_serviceAccessibility"/>

            <ImageView
                android:id="@+id/imgKidsAccessibilityObjectMain"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@id/imgServiceAvailabilityObjectMain"
                app:layout_constraintStart_toStartOf="@id/imgOverallScopeObjectMain"
                app:layout_constraintEnd_toEndOf="@id/imgOverallScopeObjectMain"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_45"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/imgKidsAccessibilityObjectMain"
                app:layout_constraintBottom_toBottomOf="@id/imgKidsAccessibilityObjectMain"
                app:layout_constraintStart_toEndOf="@id/imgKidsAccessibilityObjectMain"
                android:layout_marginStart="15dp"
                android:text="@string/om_kidsAccessibility"/>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_constraintTop_toBottomOf="@id/imgKidsAccessibilityObjectMain"
                android:layout_marginTop="20dp"/>

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/navViewObjectMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/divider"
                android:background="@color/colorGreyLight"
                app:menu="@menu/nav_object_main"
                app:labelVisibilityMode="unlabeled"
                android:elevation="0dp"
                app:elevation="0dp" />

            <FrameLayout
                android:id="@+id/container_object_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/navViewObjectMain"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabPhotoObjectPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="15dp"
        android:src="@drawable/ic_71"
        android:backgroundTint="@color/colorPrimary"
        android:visibility="gone"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabReviewObjectPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="15dp"
        android:src="@drawable/ic_84"
        android:backgroundTint="@color/colorPrimary"
        android:visibility="gone"/>

    <View
        android:id="@+id/viewChoosePhotoObjectMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#70000000"
        android:visibility="gone"/>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:translationZ="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintChoosePhotoObjectMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:padding="20dp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <ImageView
                android:id="@+id/imgCameraObjectMain"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/ic_65"
                android:scaleType="centerCrop"
                android:visibility="gone"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerChoosePhotoObjectMain"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"/>

            <TextView
                android:id="@+id/txtGalleryObjectMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/recyclerChoosePhotoObjectMain"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="@string/om_choose_from_gallery"
                android:textColor="@color/colorPrimary"/>

            <Button
                android:id="@+id/btnImageUploadObjectMain"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                app:layout_constraintTop_toBottomOf="@id/txtGalleryObjectMain"
                android:layout_marginTop="10dp"
                android:text="@string/upload"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <ProgressBar
        android:id="@+id/progressBarObjectMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>