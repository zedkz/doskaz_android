<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:text="@string/availability_mark"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintStart_toStartOf="@id/text"
        app:layout_constraintEnd_toEndOf="@id/text"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:text="@string/availability_1"/>

    <ImageView
        android:id="@+id/imgAvailability1AOD"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@id/text1"
        app:layout_constraintBottom_toBottomOf="@id/text1"
        app:layout_constraintEnd_toEndOf="@id/text"/>

    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintStart_toStartOf="@id/text"
        android:layout_marginTop="20dp"
        android:background="@color/colorDivider"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintStart_toStartOf="@id/text"
        app:layout_constraintEnd_toEndOf="@id/text"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:text="@string/availability_2"/>

    <ImageView
        android:id="@+id/imgAvailability2AOD"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@id/text2"
        app:layout_constraintBottom_toBottomOf="@id/text2"
        app:layout_constraintEnd_toEndOf="@id/text"/>

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/text2"
        app:layout_constraintStart_toStartOf="@id/text"
        android:layout_marginTop="20dp"
        android:background="@color/colorDivider"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        app:layout_constraintStart_toStartOf="@id/text"
        app:layout_constraintEnd_toEndOf="@id/text"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:text="@string/availability_3"/>

    <ImageView
        android:id="@+id/imgAvailability3AOD"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@id/text3"
        app:layout_constraintBottom_toBottomOf="@id/text3"
        app:layout_constraintEnd_toEndOf="@id/text"/>

    <View
        android:id="@+id/divider3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/text3"
        app:layout_constraintStart_toStartOf="@id/text"
        android:layout_marginTop="20dp"
        android:background="@color/colorDivider"/>

    <TextView
        android:id="@+id/text4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider3"
        app:layout_constraintStart_toStartOf="@id/text"
        app:layout_constraintEnd_toEndOf="@id/text"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:text="@string/availability_4"/>

    <ImageView
        android:id="@+id/imgAvailability4AOD"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@id/text4"
        app:layout_constraintBottom_toBottomOf="@id/text4"
        app:layout_constraintEnd_toEndOf="@id/text"/>

    <View
        android:id="@+id/divider4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/text4"
        app:layout_constraintStart_toStartOf="@id/text"
        android:layout_marginTop="20dp"
        android:background="@color/colorDivider"/>

    <TextView
        android:id="@+id/text5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider4"
        app:layout_constraintStart_toStartOf="@id/text"
        app:layout_constraintEnd_toEndOf="@id/text"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:text="@string/availability_5"/>

    <ImageView
        android:id="@+id/imgAvailability5AOD"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@id/text5"
        app:layout_constraintBottom_toBottomOf="@id/text5"
        app:layout_constraintEnd_toEndOf="@id/text"/>

    <View
        android:id="@+id/divider5"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/text5"
        app:layout_constraintStart_toStartOf="@id/text"
        android:layout_marginTop="20dp"
        android:background="@color/colorDivider"/>

    <com.zed.kz.doskaz.global.views.ObjectBigEditTextView
        android:id="@+id/obtCommentAOD"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider5"
        app:layout_constraintStart_toStartOf="@id/text"
        app:layout_constraintEnd_toEndOf="@id/text"
        android:layout_marginTop="10dp"
        app:hint="@string/comment"/>

</androidx.constraintlayout.widget.ConstraintLayout>