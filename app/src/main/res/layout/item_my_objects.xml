<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp">

    <ImageView
        android:id="@+id/imgMyObjects"
        android:layout_width="84dp"
        android:layout_height="84dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/imgStatusMyObjects"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_63"/>

    <TextView
        android:id="@+id/txtNameMyObjects"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgMyObjects"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="asdasdmaslkd"/>

    <TextView
        android:id="@+id/txtDateMyObjects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtNameMyObjects"
        app:layout_constraintStart_toStartOf="@id/txtNameMyObjects"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorGrey"/>

    <TextView
        android:id="@+id/txtTicketsMyObjects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/txtDateMyObjects"
        app:layout_constraintEnd_toEndOf="@id/txtNameMyObjects"
        android:textColor="@color/colorGrey"
        android:text="asdasd"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/txtTicketsMyObjects"
        app:layout_constraintBottom_toBottomOf="@id/txtTicketsMyObjects"
        app:layout_constraintEnd_toStartOf="@id/txtTicketsMyObjects"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_38"/>

    <TextView
        android:id="@+id/txtCommentsMyObjects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/txtDateMyObjects"
        app:layout_constraintEnd_toStartOf="@id/image"
        android:layout_marginEnd="20dp"
        android:textColor="@color/colorGrey"
        android:text="asdasd"/>

    <ImageView
        android:id="@+id/image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/txtCommentsMyObjects"
        app:layout_constraintBottom_toBottomOf="@id/txtCommentsMyObjects"
        app:layout_constraintEnd_toStartOf="@id/txtCommentsMyObjects"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_33"/>

</androidx.constraintlayout.widget.ConstraintLayout>