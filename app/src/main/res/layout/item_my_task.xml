<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp">

    <ImageView
        android:id="@+id/imgMyTask"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_47"/>

    <TextView
        android:id="@+id/txtNameMyTask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imgMyTask"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        android:text="asdasdasdasdasd asdasd asdas asd"/>

    <TextView
        android:id="@+id/txtDateMyTask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtNameMyTask"
        app:layout_constraintStart_toStartOf="@id/txtNameMyTask"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorGrey"
        android:text="100sdsdasd"/>

    <TextView
        android:id="@+id/txtPointsMyTask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtNameMyTask"
        app:layout_constraintStart_toStartOf="@id/txtNameMyTask"
        android:layout_marginTop="10dp"
        android:layout_marginStart="120dp"
        android:textColor="@color/colorGrey"
        android:text="100sdsdasd"/>

</androidx.constraintlayout.widget.ConstraintLayout>