<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgIconSearchItem"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtTitleSearchItem"
        app:layout_constraintBottom_toBottomOf="@id/txtAddressSearchItem"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/txtTitleSearchItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgIconSearchItem"
        app:layout_constraintEnd_toStartOf="@id/image"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtAddressSearchItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtTitleSearchItem"
        app:layout_constraintStart_toEndOf="@id/imgIconSearchItem"
        app:layout_constraintEnd_toStartOf="@id/image"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/colorGrey"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtTitleSearchItem"
        app:layout_constraintBottom_toBottomOf="@id/txtAddressSearchItem"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_75"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/txtAddressSearchItem"
        app:layout_constraintStart_toStartOf="@id/txtTitleSearchItem"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:background="@color/colorDivider"/>

</androidx.constraintlayout.widget.ConstraintLayout>