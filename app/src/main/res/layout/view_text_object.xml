<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txtTitleViewObjectBig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/object_text_size"/>

    <TextView
        android:id="@+id/txtValueViewObjectBig"
        android:layout_width="0dp"
        android:layout_height="@dimen/edit_text_height"
        app:layout_constraintTop_toBottomOf="@id/txtTitleViewObjectBig"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imgQuestionViewObjectBig"
        android:layout_marginEnd="15dp"
        android:background="@drawable/skin_trans_border_grey_padding"/>

    <TextView
        android:id="@+id/txtErrorViewObjectBig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtValueViewObjectBig"
        android:text="@string/field_is_required"
        android:textSize="@dimen/object_text_size"
        android:textColor="@color/colorRed"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/imgQuestionViewObjectBig"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/txtValueViewObjectBig"
        app:layout_constraintBottom_toBottomOf="@id/txtValueViewObjectBig"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_66"
        android:padding="7dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/imgDropDownViewObjectBig"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="@id/txtValueViewObjectBig"
        app:layout_constraintBottom_toBottomOf="@id/txtValueViewObjectBig"
        app:layout_constraintEnd_toEndOf="@id/txtValueViewObjectBig"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_67"/>

</androidx.constraintlayout.widget.ConstraintLayout>